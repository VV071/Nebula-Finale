# Financial News Intelligence Engine - Environment Variables

# API Keys
NEWSAPI_KEY=your_newsapi_key_here
# Get your key from: https://newsapi.org/register

# Database
DATABASE_URL=sqlite+aiosqlite:///./news_intelligence.db
# For production PostgreSQL, use: postgresql+asyncpg://user:password@localhost/dbname

# RSS Feed URLs (comma-separated)
RSS_FEEDS=https://feeds.bloomberg.com/markets/news.rss,https://www.ft.com/?format=rss,https://www.reuters.com/finance/rss

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting (requests per minute)
NEWSAPI_RATE_LIMIT=100
GDELT_RATE_LIMIT=300
RSS_RATE_LIMIT=60

# Analysis Settings
CONFIDENCE_THRESHOLD=0.5
SENTIMENT_THRESHOLD=0.6

# Batch Processing
BATCH_SCHEDULE_INTERVAL=3600  # seconds (1 hour)
MAX_ARTICLES_PER_BATCH=100

# Logging
LOG_LEVEL=INFO
